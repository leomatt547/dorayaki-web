{
  "name": "com.dorayaki.backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development PORT=8008 nodemon server.ts",
    "start": "cross-env NODE_ENV=production node --trace-warnings build/server.js",
    "lint": "eslint . --ext js,ts",
    "postinstall": "husky install",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "generate": "prisma generate",
    "migrate:prod": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev --skip-seed"
  },
  "dependencies": {
    "@prisma/client": "^3.5.0",
    "apicache": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.7",
    "debug": "~2.6.9",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "express": "~4.16.1",
    "generate-password": "^1.6.1",
    "http-errors": "~1.6.3",
    "http-status-codes": "^2.1.4",
    "jade": "^0.29.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "multer": "^1.4.3",
    "mysql": "^2.18.1",
    "nodemailer": "^6.7.1",
    "pino": "^7.2.0",
    "pino-pretty": "^7.2.0",
    "prisma": "^3.5.0",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.4",
    "@types/apicache": "^1.6.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/mysql": "^2.15.19",
    "@types/node": "^16.11.9",
    "@types/nodemailer": "^6.4.4",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "esm": "^3.2.25",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1"
  },
  "prisma": {
    "seed": "ts-node ./prisma/seed.ts",
    "schema": "./prisma/schema.prisma"
  },
  "engines": {
    "npm": "7.24.0"
  }
}
